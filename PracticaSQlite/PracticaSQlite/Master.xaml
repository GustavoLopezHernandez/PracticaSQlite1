<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PracticaSQlite.Master"
             Title="Menú">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Gestionar Autores" BackgroundColor="White"
                    x:Name="btnAutor" Clicked="autorClic" HorizontalOptions="Start"/>
            <Button Text="Gestionar Editoriales" BackgroundColor="White"
                    x:Name="btnEdit" Clicked="editorialClic" HorizontalOptions="Start"/>
            <Button Text="Gestionar Generos" BackgroundColor="White"
                    x:Name="btnGen" Clicked="generoClic" HorizontalOptions="Start"/>
            <Button Text="Gestionar Libros" BackgroundColor="White"
                    x:Name="btnLibro" Clicked="libroClic" HorizontalOptions="Start"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>